@model backend.Models.AccountDetailsViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Account Information</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.AccountHolder</h5>
                    <p class="card-text">Account Number: @Model.AccountNumber</p>
                    <p class="card-text">Balance: ₹@Model.Balance.ToString("N2")</p>
                    <p class="card-text">Account Type: @Model.AccountType</p>
                    <p class="card-text">Status: @Model.Status</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Quick Actions</h4>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Add", "Transaction")" class="btn btn-primary me-2">New Transaction</a>
                    <a href="@Url.Action("History", "Transaction")" class="btn btn-secondary me-2">Transaction History</a>
                </div>
            </div>
            <div class="mt-4">
                <h4>Recent Transactions</h4>
                @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.RecentTransactions)
                            {
                                <tr>
                                    <td>@transaction.Timestamp.ToString("g")</td>
                                    <td>@transaction.FromAccountId</td>
                                    <td>@transaction.ToAccountId</td>
                                    <td>₹ @transaction.Amount.ToString("N2")</td>
                                    <td>@transaction.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No recent transactions found.</p>
                }
            </div>
        </div>
    </div>
</div>
